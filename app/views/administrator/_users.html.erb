<div class="panel header-panel flow-text">
  <div id="title">All Users</div>
  </div>
<div class="full-height">
  <table class="striped">
    <thead>
      <tr>
          <th></th>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Email</th>
          <th>Date joined</th>
          <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.avatar.url(:large), :alt => "user", :class => "circle small_pic" %></td>
          <td><%= link_to "#{user.first_name}" , edit_user_path(user.id)%></td>
          <td><%= link_to "#{user.last_name}" , edit_user_path(user.id)%></td>
          <td><%= user.email %></td>
          <td><%= user.created_at.strftime("%Y - %e - %d") %></td>
          <td>
            <%= button_to user_path(user.id), :class => "clear-button", method: :delete, data: { :confirm=>'You sure?' } do %>
              <i class="material-icons">clear</i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="footer">
    <div class="row">
      <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
        <a class="btn-floating btn-large red">
          <i class="large material-icons"><a href="/users/new">add</a></i>
        </a>
        <!-- <ul>
          <li><a href="/users/new" class="btn-floating yellow darken-1"><i class="material-icons">settings_input_svideo</i></a></li>
        </ul> -->
      </div>
    </div>
  </div><!--end of header-->