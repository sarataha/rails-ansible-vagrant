<div class="row container full-height">
<h4>Add Product</h4>
  <%= form_for @product, :html => { :multipart => true, :class => "col s12" } do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%=f.text_field :name, :class => "validate" %>
        <%= f.label :name %>
        <div class = "error"><%= @product.errors.messages[:name][0] %></div>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%=f.text_field :description, :class => "validate" %>
        <%= f.label :description, :class => "active", "data-error" => "#{@product.errors.messages['description']}" %>
        <div class = "error"><%= @product.errors.messages[:description][0] %></div>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%=f.text_field :price, :class => "validate" %>
        <%= f.label :price %>
        <div class = "error"><%= @product.errors.messages[:price][0] %></div>
      </div>
    </div>
    
    <div class="row">
      <div class="input-field col s12">
          <%= f.collection_select(:category_id, Category.all, :id, :title, {}, { :class => "select_box", :style => "display:block;" }) %>
          <div class = "error"><%= @product.errors.messages[:category_id][0] %></div>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <%= f.file_field :product_image %>
      </div>
      <div class="product_upload_progress_bar">
        <div class="determinate" style="width: 70%"></div>
      </div>
    </div>
  <%= f.submit "Add", :class => "btn waves-effect waves-light" %>
  <% end %>
</div>
